extends base

block site_body
  ul.post-items
    - page.posts.each(function(post, i) {
      li.post-item

        article.post

          h2.post-item__title
            a(href=url_for(post.path))
              = post.title

          .post__excerpt
            != post.excerpt
    - });

  include _partial/post/list_pagination
